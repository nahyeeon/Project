height:150px; padding-top:15px; padding-left:20px;}

.biz_content .right .innovate{margin-top:50px; width:100%; height:405px; background:url(../image/business/innovate_bg.jpg) no-repeat center center;}
.biz_content .right .innovate > div{color:#fff; padding:50px;}
.biz_content .right .innovate > div b{display:block; font-size:50px; font-weight:bold; line-height:110%; margin-bottom:50px;}
.biz_content .right .innovate > div b span{font-size:32px; text-decoration:underline; text-underline-position:under;}

.biz_content .right .icon{margin-top:50px; text-align:center;}
.biz_content .right .icon ul{font-size:0; text-align:center; vertical-align:middle; }
.biz_content .right .icon ul li{display:inline-block; width:250px; font-size:17px; line-height:145%;}
.biz_content .right .icon ul li img{padding-bottom:10px;}
.biz_content .right .icon ul li b{display:block; font-family:'GmarketSansMedium'; font-size:30px; font-weight:400; line-height:120%; padding-bottom:-5px;}
