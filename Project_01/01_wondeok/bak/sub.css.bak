@charset "UTF-8";

/* header */
.header .search{overflow:hidden;}
.header .search p{float:left; font-size:16px; color:#555; border-bottom:1px solid #ddd; 
margin:0 5px; padding-bottom:5px; text-indent:0.5em;}

/* sub_visual */
.sub_visual{display:table; width:100%; height:423px; background:url(../image/about/vis_bg.jpg) no-repeat center center;}
.sub_visual > div{display:table-cell; height:100%; vertical-align:middle; text-align:center; color:#fff; padding-top:150px;}
.sub_visual > div h2{font-size:50px; font-weight:700; letter-spacing:-1px;}
.sub_visual > div h3{font-size:20px; font-weight:300; padding-top:8px;}

/* sub_content */
.sub_content{padding-bottom:100px; overflow:hidden;}
.sub_content .left{float:left; width:235px; text-align:center;}
.sub_content .left ul li{width:235px; height:66px; line-height:66px; border:1px solid #ddd; border-bottom:0;
font-size:17px; font-weight:400;}
.sub_content .left ul li:first-child{width:235px; height:166px; line-height:166px; font-size:19px; font-weight:500; color:#000;
background:url(../image/tit_bg.png) no-repeat center center; background-size:cover; background-color:#f6f7f9;}
.sub_content .left ul li:last-child{border-bottom:1px solid #ddd;}
.sub_content .left ul li:first-child a{color:#000;}
.sub_content .left ul li a:hover{background-color:#338cfa; color:#fff;}
.sub_content .left ul li .active{background-color:#338cfa; color:#fff;}
.sub_content .left ul li a{display:block; color:#cecece;}

.sub_content .right{float:right; width:930px; position:relative;}
.sub_content .right .top{margin-bottom:60px;}
.sub_content .right .top > h2{float:left; width:100%; height:165px; line-height:165px; font-size:38px; font-weight:500;
border-bottom:1px solid #ddd;}
.sub_content .right .top ul{position:absolute; right:0; top:75px; float:right; font-size:0;}
.sub_content .right .top ul li{display:inline-block; font-size:17px; font-weight:400; color:#898989; padding-right:14px;}
.sub_content .right .top ul li:last-child{padding-right:0;}

.sub_content .right .bottom{padding-top:240px; position:relative;}
.sub_content .right .bottom ul li h4{font-size:30px; font-weight:500; color:#338cfa; line-height:120%; letter-spacing:-1px; padding-bottom:50px;}
.sub_content .right .bottom ul li b{display:block; font-size:22px; font-weight:400;
padding-bottom:80px;}
.sub_content .right .bottom ul li p{line-height:145%;}

.sub_content .right .bottom ul li:first-child:after{position:absolute; content:""; 
background:url(../image/about/ceo_man.jpg) no-repeat; width:397px; height:387px; 
right:0; top:160px;}

/* biz_visual */
