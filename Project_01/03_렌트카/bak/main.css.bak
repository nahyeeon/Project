@charset "UTF-8";

/* 3e68c3 */

.inner{width:1200px; margin:0 auto;}

/* header */
header{height:118px; border-bottom:1px solid #ddd;}
.top{height:30px; line-height:30px; border-bottom:1px solid #ddd;}
.top .inner{text-align:right;}
.top .inner ul{font-size:0;}
.top .inner ul li{display:inline-block; color:#666666; font-size:15px;}

/* visual */
.visual{width:100%; height:491px; background:url(../image/visual_bg.jpg) no-repeat center center;}
.visual ul{font-size:0;}
.visual ul li{display:inline-block; width:258px; height:347px; margin-right:35px; box-shadow:10px 10px 5px rgba(0,0,0,.5);}
.visual ul li:first-child{background:#fff; width:312px;}
.visual ul li:nth-child(2){background:url('../image/new.jpg') no-repeat center center;}
.visual ul li:nth-child(3){background:url(../image/old.jpg) no-repeat center center;}
.visual ul li:last-child{background:url(../image/special.jpg) no-repeat center center;  margin-right:0;}


