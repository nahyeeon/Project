@charset "utf-8";

#wrap{width:100%;}
.inner{width:1200px; margin:0 auto;}
.content{width:100%;}
/* footer */
footer{padding:50px 0; background:#a8a8a8;}

/* header */
header{position:absolute; left:0; top:0; width:100%;}
header .inner{overflow:hidden; height:158px; line-height:158px;}
header h1{float:left; font-weight:bold; padding-top:10px;}

/* visual */
.visual{background:url(../image/visual_bg.jpg); width:100%; height:808px;}
.visual .left{float:left; padding-top:222px;}
.visual .right{float:right; padding-top:135px;}

.left ul{font-size:0; margin-bottom:22px;}
.left ul li{display:inline-block; margin-right:10px;}
.left h3{font-size:37px; font-weight:100; margin-bottom:10px; font-family: 'Gothic A1', sans-serif;}
.left h2{font-size:70px; font-weight:bold; line-height:105%; font-family: 'Gothic A1', sans-serif;
margin-bottom:45px;}
.left p{line-height:130%; font-size:14px; margin-bottom:30px;}
.left p span{font-style:italic;}
.left button{font-size:14px; border:0; width:151px; height:34px; background-color:#0098af; color:#fff; text-indent:-10px; cursor:pointer;}
.left button + button{background-color:#c7ada0; text-indent:0;}

/* content */
.content .about{background:#ecf0f1; padding:80px 0;}
.content .service{background:url(../image/quick_bg.jpg); width:100%; height:645px;}

.about{text-align:center;}
.about p{font-size:20px; font-weight:300; color:#000; letter-spacing:-1px;}
.about h2{font-size:37px; line-height:90%; padding-top:10px; font-weight:400; margin-bottom:40px;
font-family: 'Gothic A1', sans-serif; letter-spacing:-2px;}
.about h2 span{font-size:14px; color:#8b8c8e; font-weight:400;}
.about ul{font-size:0; width:100%;}
.about ul li{position:relative; display:inline-block; width:240px; height:290px; box-sizing:border-box; -webkit-box-sizing:border-box; -moz-box-sizing:border-box;}
.about ul li:nth-child(2){background:#0098b0; color:#fff;}
.about ul li:nth-child(4){background:#c7ada0; color:#000;}
.about ul li:nth-child(5){background:#fff; color:#fff;}
.about ul li > span{position:absolute; left:68px; top:36px;}
.about ul li > p{position:absolute;}



