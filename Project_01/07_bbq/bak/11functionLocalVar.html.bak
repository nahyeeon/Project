    <script language="JavaScript">
		//var사용하면 지역변수로 인식
		//var사용하지 않으면 전역변수로 인식
		function localvar(){
			a = "전역변수입니다." //전체 변수를 어디서나 사용 가능,
			var b = "지역변수입니다" //서로 다른 구역 안에서 같은 이름 사용가능
			document.write("a는", a);
			document.write("<br>");
			document.write("b는", b);
		}
	</script>
 </head>
 <body>
	
   <script language="JavaScript">
		localvar()
		document.write("<br>");
		document.write("<br>");
		document.write("a는", a);
		document.write("<br>");
		document.write("b는", b2023-04-10);
	</script>


 </body>
